@model BlogTest.Models.PostComment

@{
    ViewData["Title"] = "Edit";
}

<header class="masthead" style="background-image: url('/img/account_setting2.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto" style="font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;">
                <div class="site-heading">
                    <h1 style="color:white;">
                        Edit
                    </h1>
                    <span style="color:white;" class="subheading">Some comment is unacceptable</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PostCategoryId" value="@Model.PostCategoryId" />
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModeratedReason" class="control-label"></label>
                    <textarea asp-for="ModeratedReason" class="form-control"></textarea>
                    <span asp-validation-for="ModeratedReason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModeratedContent" class="control-label"></label>
                    <textarea asp-for="ModeratedContent" class="form-control"></textarea>
                    <span asp-validation-for="ModeratedContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
                <div>
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>

            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
